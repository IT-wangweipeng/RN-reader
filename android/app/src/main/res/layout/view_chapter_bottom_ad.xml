<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:minHeight="43dp"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ad_click_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="43dp"
        android:minHeight="43dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_native_image"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_marginStart="11dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="19dp">

            <TextView
                android:id="@+id/tv_native_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#7B7F85"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_native_ad_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="11dp"
                android:textColor="#7B7F85"/>
        </RelativeLayout>

        <TextView
            android:layout_marginEnd="13dp"
            android:id="@+id/btn_native_creative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_corner_with_red"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="查看详情"
            android:textColor="#fff"
            android:textSize="13dp" />
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cancel_ad"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_cancel_ad"/>
    </RelativeLayout>

</LinearLayout>
