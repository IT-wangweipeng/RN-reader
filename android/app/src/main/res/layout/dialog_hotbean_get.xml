<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_corner_dailog"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="24dp"
        android:text="恭喜您,阅读xx分钟获得xx热豆奖励,继续阅读xx分钟,将会获得xx热豆奖励,继续加油哦!"
        android:textColor="#1E252F"
        android:textSize="15sp"
        app:lineHeight="24dp" />

    <LinearLayout
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/shape_round_corner_dailog_bottom"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ok"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#F85836"
            android:layout_height="match_parent"
            android:text="知道啦"/>
    </LinearLayout>
</LinearLayout>