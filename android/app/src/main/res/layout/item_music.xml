<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_marginStart="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_music_list_item_play"/>
    <TextView
        android:id="@+id/item_name"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/item_change_layout"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="18dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_change_icon"
            android:layout_width="16dp"
            android:layout_height="13dp"
            android:background="@drawable/ic_change_one_enable"/>

        <TextView
            android:id="@+id/item_change_text"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music_change_one"/>
    </LinearLayout>

</LinearLayout>